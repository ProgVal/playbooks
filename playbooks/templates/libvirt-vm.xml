<domain type='kvm' xmlns:qemu='http://libvirt.org/schemas/domain/qemu/1.0'>
  <name>{{vm_hostname}}</name>
  <uuid>{{hostvars[vm_hostname].vm_uuid}}</uuid>
  <memory unit='MiB'>{{mem_max_mib}}</memory>
  <currentMemory unit='MiB'>{{mem_cur_mib}}</currentMemory>
  <vcpu placement='static'>{{nb_vcpu}}</vcpu>
  <os>
    <type arch='x86_64' machine='pc-i440fx-2.8'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <cpu mode='host-passthrough'>
  </cpu>
  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <pm>
    <suspend-to-mem enabled='no'/>
    <suspend-to-disk enabled='no'/>
  </pm>
  <qemu:commandline>
    <qemu:arg value='-drive' />
    <qemu:arg value='file=rbd:rbd-root-images/root-builder:id=admin,format=raw,id=drive1,if=virtio,readonly=on' />
  </qemu:commandline>
  <!--<qemu:commandline>
    <qemu:arg value='-drive' />
    <qemu:arg value='file=rbd:rbd-root-images/root-builder:id=admin,format=raw,id=drive1,if=none,readonly=on' />
    <qemu:arg value='-device' />
    <qemu:arg value='driver=ide-hd,drive=drive1,discard_granularity=512' />
  </qemu:commandline>-->
  <devices>
    <emulator>/usr/bin/kvm</emulator>
    <!--<disk type='network' device='disk'>
      <driver name="qemu" type="raw" readonly="true" />
      <source protocol='rbd' name='rbd-root-images/{{vm_hostname}}'>
        {% for mon in groups['mons'] %}
        <host name='{{ hostvars[mon].fe_addr }}' />
        {% endfor %}
        <auth username='{{ansible_hostname}}-libvirt' type='ceph'>
          <secret uuid='{{rbd_auth_secret_uuid}}' />
        </auth>
      </source>
      <target dev="hda" bus="ide"/>
    </disk>-->
    <interface type='network'>
      <source network='default'/>
      <model type='virtio'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x03' function='0x0'/>
    </interface>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <channel type='unix'>
      <target type='virtio' name='org.qemu.guest_agent.0'/>
      <address type='virtio-serial' controller='0' bus='0' port='1'/>
    </channel>
    <input type='tablet' bus='usb'>
      <address type='usb' bus='0' port='1'/>
    </input>
    <input type='mouse' bus='ps2'/>
    <input type='keyboard' bus='ps2'/>
    <graphics type='vnc' port='-1' autoport='yes'>
      <listen type='address'/>
    </graphics>
    <video>
      <model type='cirrus' vram='16384' heads='1' primary='yes'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
    </video>
    <memballoon model='virtio'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x08' function='0x0'/>
    </memballoon>
    <rng model='virtio'>
      <backend model='random'>/dev/random</backend>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x09' function='0x0'/>
    </rng>
  </devices>
</domain>

